.angular-books-content{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #333333;
}

.angular-remark{
  width: 40%;
}

.angular-title{
  font-size: 40rpx;
  color: #333333;
}

.angular-price{
  font-size: 30rpx;
  color: red;
}

.angular-car{
  position: fixed;
  top: 460px;
  left: 300px;
  height: 50px; 
  width: 50px; 
  border-radius: 50%;
  background-color: red;
  display: flex;
  justify-content: center;
  align-items: center;
}
/* pages/order/order.wxss */
page { 
  background-color: #F4F4F4; 
}

.order-books-content{
  display: flex;
  justify-content: start;
  align-items: center;
  padding: 10px;
  background-color: #ffffff; 
  border-bottom: 1px solid #333333; 
}

/*checkbox 选项框大小  */
checkbox .wx-checkbox-input {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
/*checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #3E5E81;
}
/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
.order-remark{
  width: 40%;
}

.order-title{
  font-size: 40rpx;
  color: #333333;
}

.order-price{
  font-size: 30rpx;
  color: red;
}

.order-btn-sum{
    display: flex;
    text-align:right;
    border:1px solid #D9D9D9;
    border-radius:2px;
}

.order-btn{
    width:28px;
    height:28px;
    line-height:28px;
    border-radius:0px;
    font-size:18px;
    padding:0px;
    background-color: #F7F6F6;
}

.order-sum{
    width:32px;
    height:28px;
    text-align:center;
    font-size:12px;
    line-height:28px;
    background-color: #fbfbfb;
    border-left:1px solid #D9D9D9;
    border-right:1px solid #D9D9D9;
    min-height:28px;
}

.order-bar{
  position: fixed;
  bottom: 0px;
  background-color: #ffffff; 
  width: 100%;
  height: 60px;
  line-height: 60px;
  padding-left: 20px;
  display: flex;
  justify-content: space-between;
  font-size: 16px;
}

.order-submit{
  height: 100%;
  width: 100px;
  display:flex;
  justify-content:center;
  align-items:center;
  background-color: #E54D42;
}
/* pages/user/user.wxss */
page { 
  background-color: #F4F4F4; 
}

.person-top{
  width: 100%; 
  height: 300px;
}

.person-background{
  width: 100%; 
  height: 100%;
  filter: blur(4px);

}

.person-head{
  position: absolute;
  z-index: 1;
  top: 20%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
}

.person-head-name{
  color: #ffffff;
  text-align: center;
}

.person-head-pic{
  width: 100px; 
  height: 100px;
  border-radius: 50%;
}

.person-address{
  margin-top: 10rpx;
  padding: 20rpx;
  width: 100%;
  display: flex;
  background-color: #ffffff;
  justify-content: space-between;
  border-top: 1px solid #F9F9F9;
}
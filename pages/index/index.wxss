/**index.wxss**/

.swiper-container {
  position: relative;
}

.swiper-container .swiper {
  height: 400rpx;
}

.swiper-container .swiper .img {
  width: 100%;
  height: 100%;
}

.swiper-container .dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.swiper-container .dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  border-radius: 8rpx;
  transition: all 0.6s;
}

.swiper-container .dots .dot.active {
  width: 24rpx;
  background: #f80;
}

.book-type{
  height: 100%;
}

.book-type view{
  margin-top: 3%;
  height: 30%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #333333;
  opacity: .5;
}

.book-type view text{
  position: absolute;
  z-index: 1000;
  color: #ffffff;
  font-size: 80rpx;
}
